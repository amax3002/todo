<table>
  <tr>
    <th>
      Name
    </th>
    <th>
      Due Date
    </th>
    <th>
      Complete
    </th>
  </tr>
  <% @tasks.each do |task| %>
    <tr>
      <td>
        <%= task.name %>
      </td>
      <td>
        <%= task.due_date %>
      </td>
      <td>
        <%= task.complete %>
      </td>
    </tr>
  <% end %>
</table>
